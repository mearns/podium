{
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "semi": [2, "always"],
        "no-extra-semi": 2,
        "semi-spacing": [2, { "before": false, "after": true }],
        "prettier/prettier": "error",
        "react/react-in-jsx-scope": "off"
    },
    "globals": {
        "React": "writable"
    }
}
